\newcommand \forcenewcommand[2] {%
    \providecommand{#1}{}%
    \renewcommand{#1}{#2}%
}

\newcommand \forcenewenvironment[3] {%
	\expandafter\def\csname#1\endcsname{}%
	\expandafter\def\csname end#1\endcsname{}%
	\renewenvironment{#1}{#2}{#3}%
}
