% Removes a column type set with \newcolumntype
% Thanks to Heiko Oberdiek for this command
\newcommand* \removecolumntype[1] {%
	\begingroup%
	\toks@={}%
	\def\NC@do##1{%
		\if##1#1%
		\else%
			\toks@=\expandafter{\the\toks@\NC@do##1}%
		\fi%
	}%
	\the\NC@list%
	\expandafter\endgroup%
	\expandafter\NC@list\expandafter{\the\toks@}%
}

\makeatother
