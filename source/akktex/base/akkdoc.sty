\RequirePackage{ifthen}
\RequirePackage{akkcommand}

\makeatletter

\newboolean{akk@datetitle}

\forcenewcommand \maketitle {%
    \setboolean{akk@datetitle}{false}%
    \akk@maketitle%
}

\newcommand \makedatetitle {%
    \setboolean{akk@datetitle}{true}%
    \akk@maketitle%
}

\newcommand \includeplain[1] {%
	\let\akk@orig@clearpage\clearpage%
	\let\clearpage\relax%
	\include{#1}%
	\let\clearpage\akk@orig@clearpage%
}

\makeatother
