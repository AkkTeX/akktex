% titled list item
%
% Example:
% \begin{itemize}
%     \titem{Title 1}
%         Text for this item
%     \titem{Title 2}
%         Text for this item
% \end{itemize}
%
% Setting title format:
% \renewcommand \titemformat[1] {\textbf{#1}} % default setting
%
\newcommand \titemformat[1] {\textbf{#1}}
\newcommand \titem[1]       {\unskip\item \titemformat{#1}\\*}
