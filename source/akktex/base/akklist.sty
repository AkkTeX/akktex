% titled list item
%
% Example:
% \begin{itemize}
%     \titem{Title 1}
%         Text for this item
%     \titem{Title 2}
%         Text for this item
% \end{itemize}
%
% Setting title style:
% \renewcommand \titemstyle[1] {\textbf} % default setting
%
\newcommand* \titemstyle  {\bfseries}
\newcommand* \titem[1]    {\unskip\item\titemstyle{#1}\\*}
