% prepare for Latin-1 encoding, T1 font and German dictionary
\RequirePackage[latin1]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage[ngerman,KeepShorthandsActive]{babel}

% German abbreviations
\RequirePackage{akkgermanabbreviations}

% German quotes
\newcommand \qq[1] {\glqq #1\grqq}

% non wrappable dash (-) allowing further hyphenation
\defineshorthand{"_}{%
    \textormath{%
        \leavevmode%
        \nobreak%
        \hbox{-}%
        \nobreak%
        \hspace{0pt}%
    }{%
        -%
    }%
}

% "/ shorthand for wrappable slash (/)
\defineshorthand{"/}{/\hspace{0pt}}
